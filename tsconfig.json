{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strict": true,
    "target": "ES2019",
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "CommonJS",
    "rootDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
